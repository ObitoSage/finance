<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Botón de regreso -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/primary_dark" />
        </androidx.cardview.widget.CardView>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_subtitle"
            android:textSize="17sp"
            android:textColor="@color/gray_500"
            android:layout_marginBottom="32dp" />

        <!-- Nombre completo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="@color/gray_400" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/full_name_hint"
                    android:textSize="17sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="48dp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/gray_400"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/ivNameCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:visibility="gone"
                    app:tint="@color/green_500" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_error"
            android:textSize="14sp"
            android:textColor="@color/red_500"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/gray_400" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/email_hint"
                    android:textSize="17sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="48dp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/gray_400"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:id="@+id/ivEmailCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:visibility="gone"
                    app:tint="@color/green_500" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvEmailError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_error"
            android:textSize="14sp"
            android:textColor="@color/red_500"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="@color/gray_400" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/password_hint"
                    android:textSize="17sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="48dp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/gray_400"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_menu_view"
                    app:tint="@color/gray_400" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_error"
            android:textSize="14sp"
            android:textColor="@color/red_500"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Confirmar Contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="@color/gray_400" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/password_hint"
                    android:textSize="17sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="48dp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/gray_400"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/ivToggleConfirmPassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_menu_view"
                    app:tint="@color/gray_400" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvConfirmPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_match_error"
            android:textSize="14sp"
            android:textColor="@color/red_500"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Checkbox Términos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/primary_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/accept_terms"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Botón Crear cuenta -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/create_account"
            android:textSize="17sp"
            android:textStyle="bold"
            android:enabled="false"
            android:backgroundTint="@color/gray_200"
            android:textColor="@color/gray_400"
            app:cornerRadius="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray_200" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:textSize="14sp"
                android:textColor="@color/gray_400"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray_200" />
        </LinearLayout>

        <!-- Login link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textSize="17sp"
                android:textColor="@color/gray_600" />

            <TextView
                android:id="@+id/tvGoToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_action"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
