<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_light"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/gray_200">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"
                    android:contentDescription="Volver"
                    app:tint="@color/primary_dark" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Nueva meta"
                android:textSize="28sp"
                android:textColor="@color/primary_dark"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Preview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/previewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/red_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/previewIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_target"
                        app:tint="@color/red_500"
                        android:contentDescription="Vista previa" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Vista previa de tu meta"
                        android:textSize="16sp"
                        android:textColor="@color/gray_700"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nombre de la meta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la meta"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/accent_teal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Fondo de emergencia"
                    android:inputType="textCapSentences"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Monto objetivo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto objetivo"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/accent_teal"
                app:prefixText="$">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMontoObjetivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha límite (opcional) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha límite (opcional)"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeColor="@color/accent_teal"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/gray_500">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFechaLimite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seleccionar fecha"
                    android:focusable="false"
                    android:clickable="true"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ícono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ícono"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerIcono"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_spinner"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <View
                    android:id="@+id/colorRed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_color_selector"
                    android:backgroundTint="@color/red_500"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorBlue"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_color_selector"
                    android:backgroundTint="@color/blue_500"
                    android:alpha="0.5"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorGreen"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_color_selector"
                    android:backgroundTint="@color/green_500"
                    android:alpha="0.5"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorYellow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_color_selector"
                    android:backgroundTint="@color/category_home"
                    android:alpha="0.5"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorPurple"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_color_selector"
                    android:backgroundTint="#8B5CF6"
                    android:alpha="0.5"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorPink"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_color_selector"
                    android:backgroundTint="@color/category_entertainment"
                    android:alpha="0.5"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Botón guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Guardar meta"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                app:backgroundTint="@color/accent_teal"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
