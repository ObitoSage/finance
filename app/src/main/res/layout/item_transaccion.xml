<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono de categoría con indicador de tipo -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <View
                android:id="@+id/iconoFondo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/categoria_icon_bg" />

            <ImageView
                android:id="@+id/iconoCategoria"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="Icono de categoría" />

            <!-- Indicador de tipo (ingreso/gasto) -->
            <ImageView
                android:id="@+id/iconoTipo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-2dp"
                android:layout_marginBottom="-2dp"
                android:background="@android:color/white"
                android:contentDescription="Tipo de transacción" />
        </FrameLayout>

        <!-- Información de la transacción -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descripcionTransaccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212842"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/horaTransaccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#D1D5DB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/categoriaTransaccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9CA3AF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Monto -->
        <TextView
            android:id="@+id/montoTransaccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
