<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp">

            <!-- Botón volver -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/beige">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/primary_dark" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen de diciembre de 2025"
                android:textSize="32sp"
                android:textColor="@color/primary_dark"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Total Gastado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastaste"
                android:textSize="17sp"
                android:textColor="@color/gray_500"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTotalGastado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0"
                android:textSize="48sp"
                android:textColor="@color/primary_dark"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Comparación con mes anterior -->
            <LinearLayout
                android:id="@+id/layoutComparacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_rounded_pill"
                android:backgroundTint="@color/error_red_light"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivTendencia"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_trending_up"
                    app:tint="@color/error_red"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvComparacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+0.0% vs mes anterior"
                    android:textSize="14sp"
                    android:textColor="@color/error_red"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_100" />

        <!-- Gráfico de Distribución -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distribución por categoría"
                android:textSize="17sp"
                android:textColor="@color/gray_700"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Card del gráfico -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/beige">

                <!-- Gráfico PieChart -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp" />

                <!-- Estado vacío -->
                <LinearLayout
                    android:id="@+id/layoutEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_pie_chart"
                        app:tint="@color/gray_400"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin datos para mostrar"
                        android:textSize="17sp"
                        android:textColor="@color/gray_600"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registra gastos para ver tu reporte"
                        android:textSize="14sp"
                        android:textColor="@color/gray_400"
                        android:gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Lista de Categorías -->
        <LinearLayout
            android:id="@+id/layoutCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="32dp"
            android:visibility="gone">

            <!-- Las categorías se agregan dinámicamente -->
        </LinearLayout>

        <!-- Card de Ahorro -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/success_green_light"
            app:cardBackgroundColor="@color/success_green_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Lograste ahorrar!"
                    android:textSize="17sp"
                    android:textColor="@color/success_green"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalAhorrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0"
                    android:textSize="32sp"
                    android:textColor="@color/success_green"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Compartir -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompartir"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="Compartir reporte"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            app:icon="@drawable/ic_share"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/primary_dark"
            app:cornerRadius="16dp" />

    </LinearLayout>

</ScrollView>
