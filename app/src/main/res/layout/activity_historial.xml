<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/btnVolver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/categoria_icon_bg"
                android:backgroundTint="#F0E7D5"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Historial"
                android:textColor="#212842"
                android:textSize="32sp"
                android:fontFamily="sans-serif-black" />
        </LinearLayout>

        <!-- Resumen de balance -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F0E7D5"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingresos"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalIngresos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="$ 0"
                        android:textColor="#10B981"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gastos"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalGastos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="$ 0"
                        android:textColor="#EF4444"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="$ 0"
                        android:textColor="#10B981"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Filtros de tipo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTodos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Todo"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#212842"
                android:textColor="@android:color/white"
                android:paddingVertical="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGastos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="Gasto"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#F0E7D5"
                android:textColor="#212842"
                android:paddingVertical="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIngresos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Ingreso"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="#F0E7D5"
                android:textColor="#212842"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- Búsqueda -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#F0E7D5"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#9CA3AF"
                    android:contentDescription="Buscar" />

                <EditText
                    android:id="@+id/inputBusqueda"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Buscar transacción..."
                    android:textColorHint="#9CA3AF"
                    android:textColor="#212842"
                    android:textSize="17sp"
                    android:inputType="text"
                    android:importantForAutofill="no" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Filtro por categoría -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:id="@+id/btnFiltroCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_filter"
                    app:tint="#212842"
                    android:contentDescription="Filtrar" />

                <TextView
                    android:id="@+id/textoFiltroCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Filtrar por categoría"
                    android:textColor="#212842"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Panel de categorías -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#F0E7D5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/listaCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <!-- Las categorías se agregarán dinámicamente -->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Lista de transacciones -->
        <LinearLayout
            android:id="@+id/listaTransacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">
            <!-- Las transacciones se agregarán dinámicamente -->
        </LinearLayout>

        <!-- Estado vacío -->
        <LinearLayout
            android:id="@+id/estadoVacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="48dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_shopping_bag"
                app:tint="#D1D5DB"
                android:contentDescription="Sin transacciones" />

            <TextView
                android:id="@+id/textoVacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sin transacciones registradas"
                android:textColor="#6B7280"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/subtextoVacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Comienza a registrar tus gastos e ingresos"
                android:textColor="#9CA3AF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
